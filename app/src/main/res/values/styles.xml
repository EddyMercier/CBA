<resources>
<!-- TODO : Ajouter les styles personnalisÃ©s -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="colorAccentDark">@color/colorAccentDark</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

<!--  TODO : Utiliser "android:textAppearance" pour changer entre event_row. et event. .  -->
    <style name="AppTheme.Event_Row" parent="AppTheme.NoActionBar"/>

    <style name="AppTheme.Event_Row.Description">
        <item name="android:textAppearance">@dimen/textAppearanceSmall</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginBottom">0sp</item>
        <item name="android:textSize">@dimen/textSizeTitre3Row</item>
        <item name="android:textColor">@color/gris90</item>
    </style>

    <style name="AppTheme.Event_Row.Lieu" parent="AppTheme.Event_Row.Description">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:textSize">@dimen/textSizeTitre1Row</item>
        <item name="android:textColor">@color/colorAccentDark</item>
    </style>
    <style name="AppTheme.Event_Row.Titre" parent="AppTheme.Event_Row.Description">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textAppearance">@dimen/textAppearanceMedium</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textSize">@dimen/textSizeTitre2Row</item>
        <item name="android:textColor">@color/gris90</item>
    </style>

    <style name="AppTheme.Event_Row.Date" parent="AppTheme.Event_Row.Lieu">
        <item name="android:layout_marginTop">2sp</item>
        <item name="android:textSize">@dimen/textSizeTitre2Row</item>
        <item name="android:textColor">@color/gris80</item>
    </style>

    <style name="AppTheme.Event_Row.Heure" parent="AppTheme.Event_Row.Lieu">
        <item name="android:layout_marginTop">2sp</item>
        <item name="android:textSize">@dimen/textSizeTitre2Row</item>
        <item name="android:textColor">@color/gris60</item>
    </style>


    <style name="AppTheme.Event" parent="AppTheme.Event_Row">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Event.Description">
        <item name="android:textAppearance">@dimen/textAppearanceSmall</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginBottom">0sp</item>
        <item name="android:textSize">@dimen/textSizeTitre3</item>
        <item name="android:textColor">@color/gris90</item>
    </style>

    <style name="AppTheme.Event.Lieu" parent="AppTheme.Event_Row.Description">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:textSize">@dimen/textSizeTitre1</item>
        <item name="android:textColor">@color/colorAccentDark</item>
    </style>
    <style name="AppTheme.Event.Titre" parent="AppTheme.Event_Row.Description">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textAppearance">@dimen/textAppearanceMedium</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textSize">@dimen/textSizeTitre2</item>
        <item name="android:textColor">@color/gris90</item>
    </style>

    <style name="AppTheme.Event.Date" parent="AppTheme.Event_Row.Lieu">
        <item name="android:layout_marginTop">2sp</item>
        <item name="android:textSize">@dimen/textSizeTitre2</item>
        <item name="android:textColor">@color/gris80</item>
    </style>

    <style name="AppTheme.Event.Heure" parent="AppTheme.Event_Row.Lieu">
        <item name="android:layout_marginTop">2sp</item>
        <item name="android:textSize">@dimen/textSizeTitre2</item>
        <item name="android:textColor">@color/gris60</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
